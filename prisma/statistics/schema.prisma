generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL_STATS")
}

/// This model or at least one of its fields has comments in the database, and requires an additional setup for migrations: Read more: https://pris.ly/d/database-comments
model member {
  idx                BigInt            @id @default(autoincrement()) @db.UnsignedBigInt
  id                 String            @unique(map: "id") @default("") @db.VarChar(24)
  nick_name          String            @unique(map: "nick_name") @default("") @db.VarChar(24)
  password           String            @default("") @db.VarChar(16)
  status             Int               @default(0) @db.TinyInt
  rule_type          member_rule_type? @default(default)
  level              Int?              @default(1) @db.TinyInt
  point              Int?              @default(0)
  money              Int?              @default(0)
  token_version      Int?              @default(0)
  acquisition_source String?           @default("") @db.VarChar(24)
  last_login_ip      String?           @default("") @db.VarChar(48)
  last_login_at      DateTime?         @default(now()) @db.DateTime(0)
  created_at         DateTime?         @default(now()) @db.DateTime(0)
}

enum member_rule_type {
  default
  regular
  pickster
}
